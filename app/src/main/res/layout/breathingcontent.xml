<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="60dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="90dp"
        android:background="@color/Color2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Vertical LinearLayout to position ImageButton and text one below the other -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Image on the top -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="357dp"
                android:layout_height="142dp"
                android:background="@android:color/transparent"
                android:contentDescription="Player logo"
                android:layout_marginTop="20dp"
                android:src="@drawable/mediaplayer" />

            <!-- Play Text under the image -->
            <TextView
                android:id="@+id/playText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Breathing Exercises \u266B"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Additional content here -->

</androidx.appcompat.widget.LinearLayoutCompat>
